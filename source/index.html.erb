<main>
    <section class="home">
        <%= image_tag("/images/cathatsquaresmall.jpg", alt: "headshot", height: "250", width: "250", style: "border-radius: 50%;") %>
        <div class="intro">
            <h1>Mike Elliott</h1>
            <p>Software Engineering Manager at <a href="https://nav.com">Nav</a></p>
            <div class="contact">
                <a class="contact-link" target="_blank" href="mailto:me@michaelelliott.me">Email</a>
                <a class="contact-link" target="_blank" href="http://linkedin.com/in/elliotec">Linkedin</a>
                <a class="contact-link" target="_blank" href="http://github.com/elliotec">Github</a>
                <a class="contact-link" target="_blank" href="http://twitter.com/elliotecweb">Twitter</a>
                <%= link_to "Resume", "/images/MichaelElliottResume2018.pdf", class: "contact-link", target: "_blank" %>
            </div>
        </div>
    </section>
    <section class="posts">
        <h2>Posts & Projects</h2>
        <ul>
            <% blog.articles.each do |post| %>
                <li class="post-item">
                    <%= link_to(post.title, post.url)%>
                </li>
                <p id="date"><%= post.date.strftime('%B %d, %Y') %></p>
            <% end %>
        </ul>
    </section>
</main>
<script async src="//squaresend.com/squaresend.js"></script>
